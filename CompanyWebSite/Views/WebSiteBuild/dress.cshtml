    <script src="https://cdn.bootcss.com/vue/2.5.18-beta.0/vue.min.js"></script>
    <script src="/layui/layui.js"></script>
    <script>
        var dataDto = JSON.parse('@Html.Raw(dataStr)');
        //当前选择导航页设置
        $('.nav-list .nav-item').each(function (i, v) {
            if ($(v).data("index") === dataDto.index) {
                $(v).addClass("cur");
            }
        })
        //修改图片尺寸
        $("#logo").css("width", "150px");   //修改尺寸
        $("#weChatQR").css("width", "130px");   //修改二维码尺寸
    layui.use(['form','jquery','layer'], function () {
        var form = layui.form;
        var $ = layui.$;
        var layer = layui.layer;

        $("#cooper").on("click", function(data) {
            $("#app").css("display", "block");
            $("#app").css("animation", "cooperation-animation 1.2s");
        });

        //合作意向表单渲染
        var app = new Vue({
            el: '#app',
            data: {
                titles: dataDto.cooperData
            },
            mounted: function () {
                form.render();
            }
        });

        //案例欣赏
        dataDto.cases.forEach((itemData,index) => {
            var item =
                '<li class="public-item"><a href="'+'@Url.Action("CaseDetail","Case")?id=' + itemData.id+'" target="_blank"><div class="img-box"><img src="'+itemData.cover+'" alt="'+itemData.name+'"></div><div class="item-desc">'+itemData.name+'</div></a></li>';
            $("#list").append(item);
        });


        form.on("submit(commit)", function (data) {
            var details = $(":checked");
            var detail = "";
            for (var i = 0; i < details.length; i++) {
                detail += details[i].value + " | ";
            }
            data.field.detail = detail;
            console.log(data);
            $.post('@Url.Action("AddCooper","Cooper")', data.field, function(data,status) {
                if (data.data == 1) {
                    layer.msg("提交成功！请等待我们联系您！");
                    $('#app').css('display', 'none');
                } else {
                    layer.msg("提交失败！");
                }
            });

            return false;
        });
    });
    </script>
